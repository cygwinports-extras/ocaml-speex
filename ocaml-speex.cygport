inherit ocaml

NAME="ocaml-speex"
VERSION=0.2.0
RELEASE=1
CATEGORY="Libs"
SUMMARY="OCaml speex bindings"
DESCRIPTION="This package contains an OCaml interface for the Speex codec library."
HOMEPAGE="http://savonet.sourceforge.net/"
SRC_URI="mirror://sourceforge/savonet/${NAME}-${VERSION}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}
